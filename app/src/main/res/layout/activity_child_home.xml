<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#F5F5F5"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Zone"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvCurrentZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--%"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginVertical="8dp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvZoneDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No logs yet"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Big Take Dose Button -->
    <Button
        android:id="@+id/btnTakeDose"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Take Dose"
        android:textSize="24sp"
        android:textStyle="bold"
        android:elevation="8dp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnLogPef"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Log Peak Flow"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        android:elevation="4dp"
        android:backgroundTint="#2196F3" />

    <Button
        android:id="@+id/btnLogSymptoms"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Daily Triggers/Symptoms Log"
        android:textSize="18sp"
        android:backgroundTint="#FF5722"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnViewRescueLog"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="View Rescue Log"
            android:textSize="14sp"
            android:backgroundTint="#C62828"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnViewControllerLog"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="View Controller Log"
            android:textSize="14sp"
            android:backgroundTint="#1565C0"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="View History"
        android:textSize="18sp"
        android:backgroundTint="#673AB7" />

    <Button
        android:id="@+id/btnAwards"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Awards"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/triage_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#2196F3"
        android:text="Triage"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:textSize="18sp" />


</LinearLayout>