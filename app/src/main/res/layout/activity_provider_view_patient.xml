<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F1FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPatientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Record"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSharingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for sharing toggles..."
            android:textColor="#616161"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvReportMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No report generated yet."
            android:layout_marginBottom="12dp"/>

        <com.example.smartair.TrendChartView
            android:id="@+id/providerTrendChart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/tvRescueStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rescue stats pending..." />

        <TextView
            android:id="@+id/tvAdherenceStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Adherence pending..." />

        <TextView
            android:id="@+id/tvTriageStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Triage incidents pending..." />

        <Button
            android:id="@+id/btnViewSharedPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#000080"
            android:text="View Shared Report (if available)"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tv_logs_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Charts and logs will appear if parent sharing is enabled."
            android:textSize="14sp"
            android:textColor="#555555"/>
    </LinearLayout>
</ScrollView>
