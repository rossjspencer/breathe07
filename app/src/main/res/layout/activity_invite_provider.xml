<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="24dp"
android:gravity="center_horizontal"
    android:background="@color/light_blue_bg">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invite Provider"
    android:textSize="28sp"
    android:textStyle="bold"
    android:layout_marginBottom="32dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Share this code with your healthcare provider to give them read-only access."
    android:gravity="center"
    android:layout_marginBottom="24dp"/>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="#F5F5F5">
    <TextView
        android:id="@+id/tv_invite_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="------"
        android:textSize="48sp"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:padding="24dp"
        android:textColor="#333333"/>
</androidx.cardview.widget.CardView>

<TextView
    android:id="@+id/tv_expiry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Code expires in 7 days"
    android:textColor="#666666"
    android:layout_marginBottom="32dp"/>

<EditText
    android:id="@+id/et_provider_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Provider's Email"
    android:inputType="textEmailAddress"
    android:layout_marginBottom="12dp"/>
<Button
    android:id="@+id/btn_generate_code"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Generate New Code"
    android:backgroundTint="#2196F3"/>

<Button
    android:id="@+id/btn_revoke_code"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="Revoke Access Code"
    android:backgroundTint="#F44336"/>

</LinearLayout>