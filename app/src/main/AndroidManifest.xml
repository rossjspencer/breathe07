        <activity android:name=".R4.pef.PefEntryActivity"/>
        <activity android:name=".R4.triage.TriageActivity"/>
        <activity android:name=".R4.pef.ParentSetPbActivity" />
        <activity android:name=".r3.InventoryLogActivity" />
        <activity android:name=".r3.BadgeSettingsActivity" />
        <activity android:name=".r3.MedicineLogActivity" />
        <activity android:name=".r3.BadgesActivity" />
        <activity android:name=".r3.InhalerGuideActivity" />
